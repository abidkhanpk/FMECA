{
  "name": "fmeca-app",
  "version": "1.0.0",
  "description": "Complete FMECA web application for Condition Monitoring programs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["fmeca", "condition-monitoring", "reliability", "maintenance"],
  "author": "FMECA Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "bcrypt": "^5.1.1",
    "csurf": "^1.11.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "ejs": "^3.1.9",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "@prisma/client": "^5.6.0",
    "prisma": "^5.6.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "moment-timezone": "^0.5.43",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/bcrypt": "^5.0.2",
    "@types/csurf": "^1.11.5",
    "@types/morgan": "^1.9.9",
    "@types/ejs": "^3.1.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}