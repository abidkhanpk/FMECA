<% layout('layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building"></i> Assets</h1>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAssetModal">
        <i class="bi bi-plus-circle"></i> Create Asset
    </button>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Asset</th>
                        <th>Tag Code</th>
                        <th>Location</th>
                        <th>Criticality</th>
                        <th>Components</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% assets.forEach(asset => { %>
                    <tr>
                        <td>
                            <strong><%= asset.name %></strong>
                        </td>
                        <td><%= asset.tagCode %></td>
                        <td>
                            <%= asset.system.area.site.company.name %> > 
                            <%= asset.system.area.site.name %> > 
                            <%= asset.system.area.name %> > 
                            <%= asset.system.name %>
                        </td>
                        <td>
                            <span class="badge bg-<%= asset.criticality === 'high' ? 'danger' : asset.criticality === 'medium' ? 'warning' : 'success' %>">
                                <%= asset.criticality.toUpperCase() %>
                            </span>
                        </td>
                        <td><%= asset.components.length %></td>
                        <td>
                            <a href="/assets/<%= asset.id %>" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
